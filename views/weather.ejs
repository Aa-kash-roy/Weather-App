        <div class = "jumbotron" style="padding-top: 30px; margin-top: 8%;">
            
            <div style="width: 40%; display: inline-block;">
                <div class="container">
                    <h2>City weather</h2>
                    <div id="myCarousel" class="carousel slide" data-ride="carousel">
                      <!-- Indicators -->
                      <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                      </ol>
                  
                      <!-- Wrapper for slides -->
                      <div class="carousel-inner">
                  
                        <div class="item active">
                          <img src="https://picsum.photos/450/350" alt="Los Angeles" >
                          <div class="carousel-caption">
                            <h3>Patna</h3>
                            <p>Humid & Rainy</p>
                          </div>
                        </div>
                  
                        <div class="item">
                          <img src="https://picsum.photos/450/350" alt="Chicago">
                          <div class="carousel-caption">
                            <h3>Delhi</h3>
                            <p></p>
                          </div>
                        </div>
                      
                        <div class="item">
                          <img src="https://picsum.photos/450/350" alt="New York">
                          <div class="carousel-caption">
                            <h3>Lucknow</h3>
                            <p></p>
                          </div>
                        </div>
                    
                      </div>
                  
                      <!-- Left and right controls -->
                      <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                      </a>
                      <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                      </a>
                    </div>
                  </div>
            </div>

            <div style="display: inline-block; padding-left: 30px;">
                <h2>Get the live weather for your city</h2>
	            <form method="POST" action="/weather">
                    <div class="form-group">
                      <label for="email">City:</label>
                      <input type="text" class="form-control" name="cityName">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
              </form>

            </div>

        </div>


